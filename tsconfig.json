{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
